<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.entry_lubang.EntryLubangFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_dashboard"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="?selectableItemBackground"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_chevron_left"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_logo"
                    android:textAppearance="?textAppearanceHeadline6"
                    android:textColor="?colorOnPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--  Date Picker  -->

            <TextView
                android:id="@+id/text_view_label_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Tanggal"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_container_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_solid_gray_container_rounded_corner"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/text_view_label_tanggal">

                <TextView
                    android:id="@+id/text_view_content_tanggal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1 Januari 2022"
                    android:textAppearance="?textAppearanceSubtitle1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button_pilih_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Tanggal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_content_tanggal" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--  End Date Picker  -->

            <!--  Ruas Jalan Picker  -->

            <TextView
                android:id="@+id/text_view_label_ruas_jalan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Ruas Jalan"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraint_layout_container_date"
                tools:visibility="visible" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_field_ruas_jalan"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_label_ruas_jalan"
                tools:visibility="visible">

                <AutoCompleteTextView
                    android:id="@+id/edit_text_ruas_jalan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pilih Ruas Jalan"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--  End Ruas Jalan Picker  -->

            <!--  Button Start Survei  -->

            <Button
                android:id="@+id/button_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="48dp"
                android:text="Mulai Survei"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_field_ruas_jalan"
                tools:visibility="gone" />

            <!--  End Button Start  -->

            <!--    Radio Button Kategori Lubang    -->

            <TextView
                android:id="@+id/text_view_label_kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Kategori Lubang"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintStart_toStartOf="@+id/text_view_label_ruas_jalan"
                app:layout_constraintTop_toBottomOf="@+id/text_field_ruas_jalan"
                tools:visibility="visible" />

            <RadioGroup
                android:id="@+id/radio_group_kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/text_view_label_kategori">

                <RadioButton
                    android:id="@+id/radio_button_kategori_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Single" />

                <RadioButton
                    android:id="@+id/radio_button_kategori_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Group" />

            </RadioGroup>

            <!--    End Radio Button Kategori Lubang    -->

            <!--  Lokasi  -->

            <TextView
                android:id="@+id/text_view_label_lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Lokasi"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintStart_toStartOf="@+id/text_view_label_ruas_jalan"
                app:layout_constraintTop_toBottomOf="@+id/radio_group_kategori"
                tools:visibility="visible" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_field_kode_lokasi"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:hintEnabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_label_lokasi"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_kode_lokasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="BDG"
                    android:maxLength="3"
                    android:padding="8dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/text_view_label_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="KM."
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintBottom_toBottomOf="@id/text_field_kode_lokasi"
                app:layout_constraintStart_toEndOf="@+id/text_field_kode_lokasi"
                app:layout_constraintTop_toTopOf="@+id/text_field_kode_lokasi"
                tools:visibility="visible" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_field_lokasi_km"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:hintEnabled="false"
                app:layout_constraintBottom_toBottomOf="@+id/text_field_kode_lokasi"
                app:layout_constraintStart_toEndOf="@+id/text_view_label_km"
                app:layout_constraintTop_toTopOf="@+id/text_field_kode_lokasi"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_lokasi_km"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="1"
                    android:inputType="number"
                    android:padding="8dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/text_view_symbol_tambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="+"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintBottom_toBottomOf="@+id/text_field_lokasi_km"
                app:layout_constraintStart_toEndOf="@+id/text_field_lokasi_km"
                app:layout_constraintTop_toTopOf="@+id/text_field_lokasi_km"
                tools:visibility="visible" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_field_lokasi_m"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:hintEnabled="false"
                app:layout_constraintBottom_toBottomOf="@+id/text_field_kode_lokasi"
                app:layout_constraintStart_toEndOf="@+id/text_view_symbol_tambah"
                app:layout_constraintTop_toTopOf="@+id/text_field_kode_lokasi"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_lokasi_m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="001"
                    android:inputType="number"
                    android:maxLength="3"
                    android:padding="8dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- End Lokasi -->

            <!--  Panjang Lubang  -->

            <TextView
                android:id="@+id/text_view_label_panjang_lubang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Panjang Lubang"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintStart_toStartOf="@+id/text_view_label_ruas_jalan"
                app:layout_constraintTop_toBottomOf="@+id/text_field_kode_lokasi"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_container_panjang_lubang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_border_gray_container_rounded_corner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_label_panjang_lubang">

                <EditText
                    android:id="@+id/edit_text_panjang_lubang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textAppearance="?textAppearanceBody2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/text_view_label_meter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_view_label_meter"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_solid_gray_container_rounded_corner"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="Meter"
                    android:textAppearance="?textAppearanceBody2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--  End Panjang Lubang  -->

            <!--  Upload Foto  -->

            <TextView
                android:id="@+id/text_view_label_upload_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Upload Foto"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintStart_toStartOf="@+id/text_view_label_ruas_jalan"
                app:layout_constraintTop_toBottomOf="@+id/constraint_layout_container_panjang_lubang"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_container_upload_foto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_solid_gray_container_rounded_corner"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_label_upload_foto">

                <ImageView
                    android:id="@+id/image_view_lubang"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    app:layout_constraintBottom_toTopOf="@id/button_ambil_gambar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button_ambil_gambar"
                    style="@style/Widget.SurveiSapuLubang.Button.Green"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ambil Gambar"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_camera"
                    app:iconGravity="textEnd"
                    app:iconSize="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--  End Upload Foto  -->

            <!--  Keterangan Lubang  -->

            <TextView
                android:id="@+id/text_view_label_keterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Keterangan Lubang"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintStart_toStartOf="@+id/text_view_label_ruas_jalan"
                app:layout_constraintTop_toBottomOf="@+id/constraint_layout_container_upload_foto"
                tools:visibility="visible" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_field_keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_label_keterangan">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Keterangan Lubang"
                    android:padding="16dp"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>
            
            <!--  End Keterangan Lubang  -->
            
            <TextView
                android:id="@+id/text_view_label_tambah_lubang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tambah Lubang"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintStart_toStartOf="@+id/text_view_label_ruas_jalan"
                app:layout_constraintTop_toBottomOf="@+id/text_field_keterangan"
                tools:visibility="visible" />

            <!--    Layout Tambah Lubang Single    -->

            <TextView
                android:id="@+id/text_view_jumlah_lubang_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="10"
                android:textAppearance="?textAppearanceHeadline2"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_label_tambah_lubang"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/text_view_label_lubang_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lubang"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintEnd_toEndOf="@id/text_view_jumlah_lubang_single"
                app:layout_constraintStart_toStartOf="@+id/text_view_jumlah_lubang_single"
                app:layout_constraintTop_toBottomOf="@+id/text_view_jumlah_lubang_single"
                tools:visibility="visible" />

            <Button
                android:id="@+id/button_tambah_lubang_single"
                style="@style/Widget.SurveiSapuLubang.Button.Green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="Tambah"
                app:layout_constraintBottom_toTopOf="@id/button_lihat_hasil_survei"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button_kurang_lubang_single"
                app:layout_constraintTop_toBottomOf="@id/text_view_label_lubang_single"
                tools:visibility="visible" />

            <Button
                android:id="@+id/button_kurang_lubang_single"
                style="@style/Widget.SurveiSapuLubang.Button.Red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:text="Kurang"
                app:layout_constraintBottom_toTopOf="@id/button_lihat_hasil_survei"
                app:layout_constraintEnd_toStartOf="@+id/button_tambah_lubang_single"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_label_lubang_single"
                tools:visibility="visible" />

            <!--    End Layout Tambah Lubang Single    -->

            <!--    Layout Tambah Lubang Group    -->

            <EditText
                android:id="@+id/edit_text_jumlah_lubang_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_border_gray_container_rounded_corner"
                android:gravity="center"
                android:hint="0 Lubang"
                android:inputType="number"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textAppearance="?textAppearanceBody2"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/button_lihat_hasil_survei"
                app:layout_constraintEnd_toStartOf="@id/button_tambah_lubang_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_label_tambah_lubang" />

            <Button
                android:id="@+id/button_tambah_lubang_group"
                style="@style/Widget.SurveiSapuLubang.Button.Green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="Tambah"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/button_lihat_hasil_survei"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_label_tambah_lubang" />

            <!--    End Layout Tambah Lubang Group    -->

            <!--    Button Lihat Hasil Survei    -->

            <Button
                android:id="@+id/button_lihat_hasil_survei"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Lihat Hasil Survei"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!--    End Button Lihat Hasil Survei    -->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>