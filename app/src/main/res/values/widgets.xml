<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Text Input Layout  -->
    <style name="Widget.SurveiSapuLubang.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopEnd">@dimen/medium_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/medium_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/medium_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/medium_radius</item>
        <item name="boxBackgroundColor">@color/gray</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.SurveiSapuLubang.TextInputLayout.OutlinedBox
        </item>
    </style>

    <style name="Widget.SurveiSapuLubang.TextInputEditText.OutlinedBox" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="hintTextColor">@color/text_hint_color</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
    </style>

    <style name="ThemeOverlay.SurveiSapuLubang.TextInputLayout.OutlinedBox" parent="">
        <item name="editTextStyle">@style/Widget.SurveiSapuLubang.TextInputEditText.OutlinedBox
        </item>
    </style>
    <!--  End Text Input Layout  -->

    <!--  Text Input Edit Text  -->
    <style name="Widget.SurveiSapuLubang.TextInputEditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:textColorHint">@color/text_hint_color</item>
    </style>
    <!--  End Text Input Edit Text  -->

    <style name="Widget.SurveiSapuLubang.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SurveiSapuLubang.SmallComponent
        </item>
    </style>

    <style name="Widget.SurveiSapuLubang.Button.Green" parent="Widget.SurveiSapuLubang.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.SurveiSapuLubang.Button.Green</item>
    </style>

    <style name="Widget.SurveiSapuLubang.Button.Red" parent="Widget.SurveiSapuLubang.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.SurveiSapuLubang.Button.Red</item>
    </style>

</resources>